# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.sh]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

# HTML, CSS, JavaScript
[*.{html,css,js}]
indent_size = 2
max_line_length = 100

# Markdown
[*.md]
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

# JSON
[*.json]
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Package files
[{package.json,*.lock}]
indent_size = 2
